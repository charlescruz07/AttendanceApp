<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:elevation="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#505050">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="25dp"
                            android:src="@drawable/light_bulb"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="25dp"
                            android:scaleType="fitXY"/>

                        <TextView
                            android:id="@+id/subjectName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:text="IT ELECTIVE 2B"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:maxLength="32"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/clock_round"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="25dp"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:id="@+id/schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:text="MWF 10:00 - 12:00pm"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:maxLength="25"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="25dp"
                        android:src="@drawable/school"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="25dp"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:id="@+id/schoolName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:text="USJ -R"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:maxLength="18"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.florent37.diagonallayout.DiagonalLayout
                android:layout_width="240dp"
                app:diagonal_angle="32"
                android:layout_alignParentRight="true"
                app:diagonal_gravity="right|top"
                tools:layout_editor_absoluteY="0dp"
                android:layout_height="match_parent"
                android:id="@+id/diag">

                <ImageView
                    android:id="@+id/classPic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/feed1"
                    android:scaleType="centerCrop"
                    android:alpha="0.2"
                    />

                <FrameLayout
                    android:id="@+id/picColor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0033CC"
                    android:alpha="0.4"></FrameLayout>

            </com.github.florent37.diagonallayout.DiagonalLayout>

        </RelativeLayout>

        </FrameLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>